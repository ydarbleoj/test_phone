<h1>New Post</h1>
<%= form_for(@image) do |f|  %>
  <div><%= f.label :text %><br>
    <%= f.text_area :text%></div>
  <div><%= f.label :photo %><br>
    <%= f.file_field :photo %></div><br>
  <div>
    <label for="image_photo">Mobile Uploads</label>
    <input type="file" capture="camera" accept="image/*" id="image_photo" name="image[photo]">
  </div>
  <div><%= f.submit "Create my post", class: "form_button" %></div>
<% end %>
